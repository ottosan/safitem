<h1>全アイテム</h1>
<% if @items %>
  <% @items.first(10).each do |item| %>
    <p>避難所名:<% item.shelters.each do |shelter|%><%= shelter.shelter_name %><%end%></p>
    <p>物資名:<%= item.name%></p>
    <% if item.image_url %>
      <img src="<%= item.image_url %>">
      <% else %>
        <p>no image</p>
        <!-- ここにイメージない時の画像貼る -->
      <% end %>
    <p>値段: <%= item.price %>円</p>
    <hr>
  <% end %>
<% end %>

<h1>避難所別アイテム</h1>
<% if @shelter_items %>
  <% @shelter_items.first(10).each do |item| %>
    <p><%= item.name%></p>
    <% if item.image_url %>
      <img src="<%= item.image_url %>">
      <% else %>
        <p>no image</p>
        <!-- ここにイメージない時の画像貼る -->
      <% end %>
    <p><%= item.price %>円</p>
    <hr>
  <% end %>
<% end %>